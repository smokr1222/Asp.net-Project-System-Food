@model IEnumerable<Orders> 
@{
    ViewData["Title"] = "Index";
}



<!-- Order History View - Acts as a distinct page -->
<div class="flex-1  flex-col">
    <section class="flex-1 bg-white rounded-2xl shadow-lg p-6 flex flex-col">
        <!-- Header/Search -->
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">سجل الطلبات</h1>
            <div class="flex items-center space-x-3">
                <div class="relative">
                    <input type="text" placeholder="ابحث عن معرف الطلب" class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                </div>
                <div class="relative">
                    <input type="date" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>
                <div class="flex items-center space-x-2">
                    <img src="https://placehold.co/40x40/cbd5e1/4a5568?text=AH" alt="صورة المستخدم الرمزية" class="w-10 h-10 rounded-full border-2 border-blue-500">
                    <span class="font-medium text-gray-700">علي هاني</span>
                </div>
            </div>
        </div>

        <!-- Order History Table -->
        <div class="flex-grow scrollable-content">
            <div class="bg-gray-100 rounded-lg p-4 mb-4 flex justify-between items-center text-gray-600 font-semibold text-lg">
                <span class="w-1/4">معرف الطلب <i class="fas fa-sort-down ml-1"></i></span>
                <span class="w-1/4">التاريخ</span>
                <span class="w-1/4">المبلغ</span>
                <span class="w-1/4">طريقة الدفع</span>
            </div>

            <!-- عناصر سجل الطلبات الوهمية -->
            <div class="space-y-3" id="order-history-list">
                @foreach (var order in Model)
                {
                    <div class="flex justify-between items-center bg-white p-4 rounded-lg shadow-sm border border-gray-200">
                        <span class="w-1/4 font-medium text-gray-800">#@order.OrderId</span>
                        <span class="w-1/4 text-gray-600">@order.OrderDate.Day / @order.OrderDate.Month / @order.OrderDate.Year  </span>
                        <span class="w-1/4 text-blue-600 font-semibold">@order.TotalAmount YER</span>
                        <span class="w-1/4 text-gray-700 flex items-center">
                            <i class="fab fa-cc-visa text-lg pl-3 mr-2"></i> @order.PaymentMethod
                        </span>
                    </div>
                }
              
            </div>
        </div>
    </section>
</div>
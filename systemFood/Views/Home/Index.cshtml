<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

 
 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
        $('.add-product').click(function (event) {
             event.preventDefault(); // ⛔️ يمنع refresh
                var id = $(this).data('id');
                $.post('/Home/Selectanitem', { id: id }, function (res) {
                    if (res.success) location.reload();
                });
            });





        $('.increase').click(function (event) {
               event.preventDefault(); // ⛔️ يمنع refresh

                var id = $(this).data('id');
                $.post('/Home/IncreaseQuantity', { id: id }, function (res) {
                    if (res.success) location.reload();
                });
            });


        $('.decrease').click(function (event) {
            event.preventDefault(); // ⛔️ يمنع refresh

                var id = $(this).data('id');
                $.post('/Home/DecreaseQuantity', { id: id }, function (res) {
                    if (res.success) location.reload();
                });
            });
        $('.trash').click(function (event) {
                event.preventDefault(); // ⛔️ يمنع refresh
                var id = $(this).data('id');
                $.post('/Home/TrashSelect', { id: id },function (res) {
                 location.reload();
                     
                });
            });

        });






            function showProductDetails(id) {
                fetch('/Product/DetalsProduct/' + id)
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('modalContainer1').innerHTML = html;
                        var modal = new bootstrap.Modal(document.getElementById('productDetailsModal'));
                        modal.show();
                    });
            }












    $(function () {
        let selectedPayment = null;

        // تحديد الزر الذي تم النقر عليه
        $('#paymentForm button[type="submit"]').on('click', function (e) {
            selectedPayment = $(this).val();
        });

        $('#paymentForm').on('submit', function (e) {
            e.preventDefault();

            $.ajax({
                url: '/Home/PaymentMethod',
                type: 'POST',
                data: { Payment: selectedPayment },
                success: function (response) {
                    // ✅ هنا تتعامل مع النتيجة، حسب ما يرجع السيرفر
                    console.log(response);
                    alert('تم اختيار طريقة الدفع بنجاح');
                },
                error: function (xhr) {
                    console.error(xhr.responseText);
                    alert('حدث خطأ أثناء إرسال الطلب');
                }
            });
        });
    });








    </script>

@using systemFood.ViewModel.SessionViewModel

@model OrderModel
@{
    
    var Producted = ViewBag.Product;
    var category = ViewBag.catogry;
    double Total = 0;
    if (Model.TotalAmount==0)
    {
        Total = (double)Model.items.Select(x => x.Price * x.Quantity).Sum();
    }
    else
    {
        Total = Model.TotalAmount;

        if (Model.items.Count<=0)
        {
            Total = 0;
        }
    }


    if (TempData["error"] != null)
    {
        <div class="alert alert-success">
            @TempData["error"]
        </div>
    }







}
<!-- Main Content Area - This area will display different views as "pages" -->
<main id="main" class="main">
    <!-- Cashier System View - Acts as a distinct page -->
    <div  class="flex-1 flex space-x-6">
        <!-- Products Section -->
        <section class="flex-1 bg-white rounded-2xl shadow-lg p-6 flex flex-col overflow-hidden">
            <!-- Header/Search -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-800">الفئات</h1>
                <div class="flex items-center space-x-3">
                    <div class="relative">
                        <input type="text" placeholder="بحث عن فئة أو قائمة" class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                    <button class="p-2 bg-gray-100 rounded-lg text-gray-600 hover:bg-gray-200">
                        <i class="fas fa-sliders-h text-xl"></i>
                    </button>
                    <div class="flex items-center space-x-2">
                        <img src="https://placehold.co/40x40/cbd5e1/4a5568?text=AH" alt="صورة المستخدم" class="w-10 h-10 rounded-full border-2 border-blue-500">
                        <span class="font-medium text-gray-700">علي هاني</span>
                    </div>
                </div>
            </div>
            <div class="relative mb-8">
                <div class="overflow-x-auto max-w-full">
                    <div class="flex gap-4 w-max pr-4">
                        @foreach (var Category in category)
                        {
                            <a asp-action="index" asp-controller="Home"  asp-route-id="@Category.Id" class=" flex-shrink-0 flex flex-col items-center justify-center p-3 w-28 h-28 rounded-2xl shadow-md bg-blue-600 text-white" >
                                <i class="@Category.Icon text-2xl mb-2"></i>
                                <span>@Category.Name</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
            <!-- Most Ordered Section -->
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">الأكثر طلبًا</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 scrollable-content flex-grow">
                @foreach (var product in Producted)
                {
                    <div class=" product-card  bg-white p-4 rounded-xl shadow-md border border-gray-200 flex flex-col items-center text-center cursor-pointer hover:shadow-lg transition-shadow duration-200">
                        <button type="button" class="add-product" data-id="@product.Id">
                            <img src="@($"{Settingss._ImgeFolderToServer}/{product.Cover}")" alt="@product.Name" class="rounded-sm img-fluid" style="height: 100px; object-fit: cover;">
                            <h3 class="font-semibold text-lg text-gray-800">@product.Name</h3>
                            <p class="text-gray-600 text-sm mb-2">@product.Description</p>

                            <p class="text-gray-600 text-sm mb-2"> الكمية :@(@product.Stock)  </p>

                            <p class="text-xl font-bold text-blue-600">@product.Price YER</p>
                        </button>
                        <div class="flex items-center space-x-2 mt-3 product-quantity-controls " >
                            <button type="button" class="decrease-order-quantity bg-gray-200 text-gray-700 p-1 rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold decrease" data-id="@product.Id">-</button>
                            <span class="quantity-display text-lg font-medium">1</span>
                            <button type="button" class="increase-order-quantity bg-blue-500 text-white p-1 rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold increase" data-id="@product.Id">+</button>
                        </div>
                    </div>

                }

          

            </div>
         
        </section>
        <!-- Order Summary Section -->
        <section class="w-96 bg-white rounded-2xl shadow-lg p-6 flex flex-col">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-semibold text-gray-800">معرف الطلب <span > @Model.OrderId </span></h2>
            </div>
            <!-- Order List -->
            <div  class="flex-grow scrollable-content mb-6">  
                <!-- سيتم إضافة عناصر الطلب هنا بواسطة JS -->
                    @foreach (var c in Model.items)
                {
                    <div class="flex items-center justify-between p-3 mb-3 bg-gray-50 rounded-lg cursor-pointer">
                        <button asp-action="DetalsProduct" asp-controller="Product" asp-route-id="@c.Id" onclick="showProductDetails(@c.Id)">

                            <div class="flex items-center space-x-3 order-item-details">
                                <img src="@($"{Settingss._ImgeFolderToServer}/{c.Cover}")" alt="Cola" class="w-10 h-10 rounded-lg">
                                <div>
                                    <p class="font-medium text-gray-800">@c.Name</p>
                                    <p class="text-sm text-gray-500">@c.Description</p>
                                </div>
                            </div>

                        </button>
                        <div class="flex items-center space-x-3">
                            <div class="flex items-center space-x-1">
                                <button type="button" class="decrease-order-quantity bg-gray-200 text-gray-700 p-1 rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold decrease" data-id="@c.Id">-</button>
                                <span class="order-quantity-display text-lg font-medium"> @c.Quantity </span>
                                <button type="button" class="increase-order-quantity bg-blue-500 text-white p-1 rounded-full w-6 h-6 flex items-center justify-center text-sm font-bold increase" data-id="@c.Id">+</button>
                            </div>
                            <span class="text-gray-700">@c.Price YER</span>
                            <button type="button" data-id="@c.Id" class="trash remove-item text-red-500 hover:text-red-700">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
                <!-- Coupon Code -->
                <div class="flex items-center mb-4">
                <form method="post" asp-action="DescandTotal" asp-controller="Descaond">
                        <input type="text" name="Descaond" placeholder="أدخل رمز القسيمة" class="flex-1 px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                        <button class="bg-blue-600 text-white px-4 py-2 rounded-r-lg hover:bg-blue-700 transition-colors duration-200">تطبيق</button>
                </form>
                </div>
                <!-- Totals -->
                <div class="space-y-3 mb-6">
                    <div class="flex justify-between">
                        <span class="text-gray-600">العناصر (<span id="items-count"> @Model.items.Select(x=>x.Quantity).Sum()  </span>)</span>
                        <span class="font-semibold text-gray-800">@Model.TotalAmount YER</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">الضريبة (10%)</span>
                    <span  class="font-semibold text-gray-800">0 YER</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">الخدمة</span>
                    <span  class="font-semibold text-gray-800">0 YER</span>
                    </div>
                    <div class="flex justify-between font-bold text-xl border-t pt-3">
                        <span class="text-gray-800">الإجمالي</span>
                        <span  class="text-blue-600">@Model.TotalAmount YER</span>
                    </div>
                </div>
                <!-- Payment Methods -->
                <h3 class="text-lg font-semibold text-gray-800 mb-3">طرق الدفع</h3>
      


            <form id="paymentForm" method="post">
                <div class="flex justify-between space-x-3 mb-6">
                    <button type="submit" value="money" name="Payment" class="payment-btn flex-1 p-3 bg-gray-100 text-gray-700 rounded-xl flex items-center justify-center space-x-2 shadow-sm border hover:bg-gray-200">
                        <i class="fas fa-money-bill-wave text-xl"></i>
                        <span class="pr-3">نقدًا</span>
                    </button>
                    <button type="submit" value="CreditCard" name="Payment" class="payment-btn flex-1 p-3 bg-gray-100 text-gray-700 rounded-xl flex items-center justify-center space-x-2 shadow-sm border hover:bg-gray-200">
                        <i class="fas fa-credit-card text-xl"></i>
                        <span class="pr-3">بطاقه بنكية</span>
                    </button>
                    <button type="submit" value="visa" name="Payment" class="payment-btn flex-1 p-3 bg-gray-100 text-gray-700 rounded-xl flex items-center justify-center space-x-2 shadow-sm border hover:bg-gray-200">
                        <i class="fab fa-cc-visa text-xl"></i>
                        <span class="pr-3">فيزا</span>
                    </button>
                </div>
            </form>

            




                <!-- Confirm Button -->
            <form method="post" asp-action="SaveOrder" asp-controller="Orders">

                <button  type="submit" class="w-full bg-blue-600 text-white py-4 rounded-xl text-lg font-semibold hover:bg-blue-700 transition-colors duration-200 shadow-lg">
                    تأكيد العملية
                </button>
            </form>
            </section>
        </div>
    </main>
<div id="modalContainer1"></div>

